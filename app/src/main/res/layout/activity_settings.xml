<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Activity_Settings">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/setting_LBL_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:text="@string/profile"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/setting_IMG_profilePic"
            android:tag="profilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/setting_LBL_userName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/setting_LBL_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_LBL_profile"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/user_name"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_IMG_profilePic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"

            android:text="@string/tap_the_picture_to_change_it">

        </TextView>

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="@color/colorPrimaryDark"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/setting_EDT_username"
            android:tag="username"
            android:background="@color/whiteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="@color/colorPrimaryDark"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_EDT_lastName"
            android:background="@color/whiteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="@color/colorPrimaryDark"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_EDT_email"
            android:background="@color/whiteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="@color/colorPrimaryDark"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_EDT_experience"
            android:background="@color/whiteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/experience"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="@color/colorPrimaryDark"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_EDT_favouriteBeach"
            android:background="@color/whiteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/favourite_beach"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:boxStrokeColor="@color/colorPrimaryDark"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_EDT_roll"
            android:background="@color/whiteColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_roll"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
